<style>
  * {
    letter-spacing: 1px;
  }
  main {
    height: calc(100vh - 80px);
    flex-direction: row;
  }
  navbar {
    width: 268px;
    padding: 16px;
    background-color: rgb(75 75 75 / 5%);
    backdrop-filter: blur(15px);
    gap: 8px;
    border-top: 1px solid var(--c-36);
  }
  navbar .option {
    cursor: pointer;
    height: 50px;
    border-radius: 17px;
    border-bottom-right-radius: 5px;
    background: var(--c-36);
    width: calc(100%);
    padding: 6px;
    gap: 8px;
    transition: all 0.3s var(--trans);
    position: relative;
  }
  navbar .option:hover {
    background: var(--c-48);
  }
  navbar .option > img {
    height: 38px;
    pointer-events: none;
    border-radius: 11px;
  }
  navbar .option > p {
    flex: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    text-align: left;
    font-size: 18px;
    text-shadow: 0px 2px 5px var(--c-16);
  }
  navbar .option .users {
    position: absolute;
    bottom: 0;
    right: 0;
    gap: 4px;
    padding: 0 4px 3px 0;
  }
  navbar .option .users > img {
    height: 13px;
  }
  navbar .option .users > p {
    margin-bottom: -2px;
    font-size: 11px;
  }
  navbar .option.disabled {
    pointer-events: none;
    cursor: not-allowed;
    filter: brightness(0.5) saturate(0);
  }
</style>
<navbar class="flex align-center flex-dir-column">
  <% 
    guilds.sort((a, b) => {
      if (a.isBotAdmin && !b.isBotAdmin) return -1;
      if (!a.isBotAdmin && b.isBotAdmin) return 1;

      if (a.members > b.members) return -1;
      if (a.members < b.members) return 1;

    }).forEach(guild => { 
  %>
    <button class="option <% if (!guild.isBotAdmin) { %>disabled <% } %>flex-dir-row align-center" onclick="guildToWorkSelect('<%- guild.id %>')">
      <img src="<%- guild.avatar %>">
      <p><%- guild.name %></p>
      <div class="users flex flex-dir-row center">
        <p><%- guild.members %></p>
        <img src="/static/images/users.svg">
      </div>
    </button>
  <% }); %>
</navbar>
<script>
  function guildToWorkSelect(selectedGuildId) {  
    $.ajax({
      url: "https://impactium.fun/terminal/guild-mode-select",
      type: "POST",
      data: JSON.stringify({ id: selectedGuildId }),
      contentType: "application/json",
      success: function (response) {
        const renderZone = $(".work-window");
        renderZone.html("");
        renderZone.html(response);
      },
      error: function (error) {
        console.log("net gg")
      }
    });
  }
</script>